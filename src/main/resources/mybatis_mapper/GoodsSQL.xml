<!--        update loginParams set name=#{name},address=#{address} where id = #{id}-->
<!--    </update>-->
    <delete id="deleteGoods" parameterType="java.lang.Integer">
        delete from goods where id = #{id,jdbcType=INTEGER}
    </delete>
</mapper>