<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core.mapper.GoodsMapper">
<!--  与数据库字段不一致时改名  -->
    <resultMap id="BaseResultMap" type="com.core.pojo.Goods" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>
<!--  输出明确字段列表，不需要输出全部字段  -->
    <sql id="Base_Column_List" >
        id, name, imgUrl
    </sql>

    <select id="goodsQueryList" resultType="com.core.pojo.Goods" parameterType="com.core.pojo.PageParams">
        select * from goods
        where name like #{name, jdbcType=VARCHAR}
    </select>
<!--    <select id="goodsQuerySearch" resultMap="BaseResultMap" parameterType="java.lang.String">-->

<!--    </select>-->
    <update id="uploadGoods" parameterType="com.core.pojo.Goods">
        update goods
        <set>
            <if test="imgUrl != null">
                imgUrl = #{imgUrl,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <insert id="insertSelective" parameterType="com.core.pojo.Goods">
        insert into goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null" >
                id,
            </if>
            <if test="name != null" >
                name,
            </if>
            <if test="create_time != null" >
                create_time,
            </if>
            <if test="imgUrl != null" >
                imgUrl,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null" >
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null" >
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="create_time != null" >
                #{create_time,jdbcType=VARCHAR},
            </if>
            <if test="imgUrl != null" >
                #{imgUrl,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select
        <include refid="Base_Column_List"/>
        from goods
        where id = #{id,jdbcType=INTEGER}
    </select>

    <update id="updateGoods" parameterType="com.core.pojo.Goods">
        update goods
        <set >
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="update_time != null">
                update_time = #{update_time,jdbcType=VARCHAR},
            </if>
            <if test="imgUrl != null">
                imgUrl = #{imgUrl,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
