        id, parent_id, create_time, title, level, sort, name, icon, hidden, path, cache
    </sql>

    <select id="treeList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from ums_menu
        order by ums_menu.sort Desc
    </select>

    <select id="selectWay" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from ums_menu
        order by ums_menu.sort Desc
    </select>

