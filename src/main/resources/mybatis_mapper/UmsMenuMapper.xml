    </update>

    <!--  +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  -->

    <delete id="deleteWay" parameterType="List">
        delete from ums_menu
        where id in(
        <foreach collection="ids" item="item" separator="," index="index">
            #{item,jdbcType=BIGINT}
        </foreach>
        )
    </delete>
