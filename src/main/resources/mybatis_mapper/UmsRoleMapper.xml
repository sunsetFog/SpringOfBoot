<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core.mapper.shoppingMall.UmsRoleMapper">
    <resultMap id="BaseResultMap" type="com.core.pojo.shoppingMall.UmsRole">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="description" jdbcType="VARCHAR" property="description" />
        <result column="admin_count" jdbcType="INTEGER" property="adminCount" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="sort" jdbcType="INTEGER" property="sort" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, description, admin_count, create_time, status, sort
    </sql>

    <select id="selectWay" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        from ums_role
        <where>
            <if test="name != null">
                name like #{name, jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>